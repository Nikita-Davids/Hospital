@model Hospital.Models.Bed

@{
    ViewData["Title"] = "AdminAddBed";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div id="successMessage" class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<style>
    h1 {
        text-align: center;
        color: #08075F;
        font-weight: bold;
        text-decoration: underline;
    }

    .box {
        border: 1px solid #ccc;
        padding: 20px;
        margin: 40px auto;
        width: 50%;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f9;
    }

    .button {
        padding: 10px 60px;
        font-size: 16px;
        background-color: #08075F;
        color: white;
        border: none;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s ease;
        float: right;
    }

    button:hover, .btn-primary:hover {
        background-color: #FFDE59;
        color: #08075F;
    }

    .form-group {
        margin-bottom: 20px;
    }

    input.form-control, select.form-control {
        width: 100%;
    }

    .btn-link {
        background-color: #08075F;
        color: white;
        border: none;
        padding: 5px 10px;
        text-decoration: none;
        cursor: pointer;
        font-size: 13px;
        display: inline-block;
        margin-top: 10px;
    }

    .btn-link:hover {
        background-color: #FFDE59;
    }

    .button-container {
        text-align: right;
        margin-top: 20px;
    }
</style>

<h1>Add Bed</h1>

<div class="box">
    <form asp-action="AdminAddBed">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="WardId" class="control-label">Ward:</label>
            <select asp-for="WardId" class="form-control" asp-items="ViewBag.WardId"></select>
            <span asp-validation-for="WardId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="BedNumber" class="control-label">Bed Number:</label>
            <input asp-for="BedNumber" class="form-control" />
            <span asp-validation-for="BedNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="IsOccupied" class="control-label">Is Occupied:</label>
            <select asp-for="IsOccupied" class="form-control">
                <option value="">Select...</option>
                <option value="true">True</option>
                <option value="false">False</option>
            </select>
            <span asp-validation-for="IsOccupied" class="text-danger"></span>
        </div>
        
        <div class="form-group">
            <input type="submit" value="Add" class="button" />
        </div>
        <br />
        <br />
    </form>
</div>

<div class="button-container">
    <a asp-action="AdminViewBed" class="btn-link">View All Beds</a>
</div>
<br />
<br />

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var successMessage = document.getElementById("successMessage");
        if (successMessage) {
            // Ensure that the success message is visible
            successMessage.style.display = "block";
            console.log("Success message is visible");

            // Hide the success message after 3 seconds
            setTimeout(function () {
                successMessage.style.display = "none";
                console.log("Success message hidden");
            }, 3000); // Hide message after 3 seconds
        }
    });
</script>
