@model Hospital.Models.DayHospital

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@if (TempData["SuccessMessage"] != null)
{
    <div id="successMessage" class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<h1>Register Hospital</h1>

<div class="form-container">
    <form asp-action="AdminAddHospital">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="HospitalName" class="control-label"></label>
            <input asp-for="HospitalName" class="form-control" />
            <span asp-validation-for="HospitalName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Address" class="control-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="City" class="control-label"></label>
            <select class="form-control" id="City" name="City" required>
                <option value="Gqeberha">Gqeberha</option>
                <option value="Johannesburg">Johannesburg</option>
                <option value="Bhisho">Bhisho</option>
                <option value="Polokwane">Polokwane</option>
                <option value="Bloemfontein">Bloemfontein</option>
                <option value="Mbombela">Mbombela</option>
                <option value="Mahikeng">Mahikeng</option>
                <option value="Cape Town">Cape Town</option>
                <option value="Pietermarizburg">Pietermarizburg</option>
                <option value="Durban">Durban</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Province" class="control-label"></label>
            <select class="form-control" id="Province" name="Province" required>
                <option value="Western Cape">Western Cape</option>
                <option value="North West">North West</option>
                <option value="Eastern Cape">Eastern Cape</option>
                <option value="Gauteng">Gauteng</option>
                <option value="Free State">Free State</option>
                <option value="Limpopo">Limpopo</option>
                <option value="Mpumalanga">Mpumalanga</option>
                <option value="Northern Cape">Northern Cape</option>
                <option value="KwaZulu-Natal">KwaZulu-Natal</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="PostalCode" class="control-label"></label>
            <select class="form-control" id="PostalCode" name="PatientPostalCode" required>
                <option value="1200">1200</option>
                <option value="4001">4001</option>
                <option value="6025">6025</option>
                <option value="4051">4051</option>
                <option value="6001">6001</option>
                <option value="4091">4091</option>
                <option value="6001">6001</option>
                <option value="4001">4001</option>
                <option value="1300">1300</option>
                <option value="4052">4052</option>
                <option value="6045">6045</option>
                <option value="4001">4001</option>
                <option value="1226">1226</option>
                <option value="6070">6070</option>
                <option value="4359">4359</option>
                <option value="4309">4309</option>
                <option value="6001">6001</option>
                <option value="1201">1201</option>
                <option value="4399">4399</option>
                <option value="4001">4001</option>
                <option value="6020">6020</option>
                <option value="6001">6001</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="ContactNumber" class="control-label"></label>
            <input asp-for="ContactNumber" class="form-control" />
            <span asp-validation-for="ContactNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="EmailAddress" class="control-label"></label>
            <input asp-for="EmailAddress" class="form-control" />
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PracticeManager" class="control-label"></label>
            <input asp-for="PracticeManager" class="form-control" />
            <span asp-validation-for="PracticeManager" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PurchaseManagerEmail" class="control-label"></label>
            <input asp-for="PurchaseManagerEmail" class="form-control" />
            <span asp-validation-for="PurchaseManagerEmail" class="text-danger"></span>
        </div>
        <div class="form-group button-container">
            <input type="submit" value="Add" class="button" />
        </div>
    </form>
</div>

<div class="button-container">
    <a class="btn-link" asp-action="AdminViewHospital">View All Added Hospitals</a>
</div>
<br />
<br />
<script>
    document.addEventListener("DOMContentLoaded", function () {
        var successMessage = document.getElementById("successMessage");
        if (successMessage) {
            // Ensure that the success message is visible
            successMessage.style.display = "block";
            console.log("Success message is visible");

            // Hide the success message after 3 seconds
            setTimeout(function () {
                successMessage.style.display = "none";
                console.log("Success message hidden");
            }, 3000); // Hide message after 3 seconds
        }
    });
</script>
<style>
    h1 {
        text-align: center;
        color: #08075F;
        font-weight: bold;
        text-decoration: underline;
    }

    .btn-link {
        background-color: #08075F;
        color: white;
        border: none;
        padding: 5px 10px;
        text-decoration: none;
        cursor: pointer;
        font-size: 13px;
    }

        .btn-link:hover {
            background-color: #FFDE59;
        }

    .form-container {
        border: 1px solid #ccc; /* Light gray border */
        padding: 20px; /* Add padding inside the border */
        border-radius: 8px; /* Rounded corners */
        background-color: #f9f9f9; /* Light background color */
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Optional: shadow for a subtle 3D effect */
        max-width: 600px; /* Maximum width of the form container */
        margin: 20px auto; /* Center container horizontally */
    }

    .button-container {
        text-align: right; /* Align button to the right */
    }

    .button {
        padding: 10px 60px;
        font-size: 16px;
        background-color: #08075F;
        color: white;
        border: none;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

        .button:hover {
            background-color: #FFDE59;
            color: #08075F;
        }

    .form-group {
        margin-bottom: 20px;
    }

    input.form-control {
        width: 100%;
    }
</style>
