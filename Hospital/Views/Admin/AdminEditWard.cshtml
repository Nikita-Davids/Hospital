@model Hospital.Models.Ward

@{
    ViewData["Title"] = "AdminEditWard";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    h1 {
        text-align: center;
        color: #08075F;
        font-weight: bold;
        text-decoration: underline;
    }

    h4 {
        color: #08075F;
        font-weight: bold;
    }

    .btn-link {
        background-color: #08075F;
        color: white;
        border: none;
        padding: 5px 10px;
        text-decoration: none;
        cursor: pointer;
        font-size: 13px;
        float: left;
    }

        .btn-link:hover {
            background-color: #FFDE59;
            border: none;
        }

    .form-border {
        border: 2px solid #ccc;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f9;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #08075F;
        border: none;
        color: white;
        float: right;
    }

        .btn-primary:hover {
            background-color: #FFDE59;
        }

    .text-danger {
        color: red;
    }

    .col-md-4 {
        max-width: 600px; /* Adjust the width to your liking */
        margin: 0 auto; /* Center the form */
    }
</style>

<h1>Edit Ward</h1>

<h4>Ward</h4>
<hr />

<div class="row">
    <div class="col-md-4 form-border">
        <form asp-action="AdminEditWard">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WardId" />
            <div class="form-group">
                <label asp-for="WardName" class="control-label"></label>
                <input asp-for="WardName" class="form-control" />
                <span asp-validation-for="WardName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfBeds" class="control-label"></label>
                <input asp-for="NumberOfBeds" class="form-control" />
                <span asp-validation-for="NumberOfBeds" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

