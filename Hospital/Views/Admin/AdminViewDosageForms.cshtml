@model IEnumerable<Hospital.Models.DayHospital>

@{
    ViewData["Title"] = "Admin View Hospitals";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    h1 {
        text-align: center;
        color: #08075F;
        font-weight: bold;
        text-decoration: underline;
    }

    .btn-link {
        background-color: #08075F;
        color: white;
        border: none;
        padding: 5px 10px;
        text-decoration: none;
        cursor: pointer;
        font-size: 13px;
    }

        .btn-link:hover {
            background-color: #FFDE59;
        }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .table th {
            background-color: #f2f2f2;
        }

        .table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

    /* Adjust the column widths */
    .col-name {
        width: 50%; /* Adjust as needed */
    }

    .col-action {
        width: 50%; /* Adjust as needed */
        text-align: center;
    }
</style>

<h1>Admin View Hospitals</h1>

<p>
    <a class="btn-link" asp-action="AdminAddHospital">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th class="col-name">
                Hospital Name
            </th>
            <th class="col-name">
                Address
            </th>
            <th class="col-name">
                City
            </th>
            <th class="col-name">
                Province
            </th>
            <th class="col-name">
                Postal Code
            </th>
            <th class="col-action">
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="col-name">
                    @Html.DisplayFor(modelItem => item.HospitalName)
                </td>
                <td class="col-name">
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td class="col-name">
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td class="col-name">
                    @Html.DisplayFor(modelItem => item.Province)
                </td>
                <td class="col-name">
                    @Html.DisplayFor(modelItem => item.PostalCode)
                </td>
                <td class="col-action">
                    <a class="btn-link" asp-action="AdminEditHospital" asp-route-id="@item.HospitalID">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
