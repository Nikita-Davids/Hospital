@model IEnumerable<Hospital.Models.DayHospital>

@{
    ViewData["Title"] = "AdminViewHospital";
}

<h1>AdminViewHospital</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HospitalName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Province)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PracticeManager)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseManagerEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HospitalName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Province)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PracticeManager)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PurchaseManagerEmail)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.HospitalId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.HospitalId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.HospitalId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
