@model Hospital.Models.ChronicCondition

@{
    ViewData["Title"] = "Edit Chronic Medication";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    h1 {
        text-align: center;
        color: #08075F;
        font-weight: bold;
        text-decoration: underline;
    }

    h4 {
        color: #08075F;
        font-weight: bold;
    }

    .btn-link {
        background-color: #08075F;
        color: white;
        border: none;
        padding: 5px 10px;
        text-decoration: none;
        cursor: pointer;
        font-size: 13px;
        float: left;
    }

        .btn-link:hover {
            background-color: #FFDE59;
            border: none;
        }

    .form-border {
        border: 2px solid #ccc;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f9;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #08075F;
        border: none;
        color: white;
        float: right;
    }

        .btn-primary:hover {
            background-color: #FFDE59;
        }

    .small-input {
        width: 250px; /* Adjust the width to your liking */
    }

    .shift-right {
        margin-left: 80px; /* Adjust the margin to your liking */
    }

    .text-danger {
        color: red;
    }
</style>

<h1>Edit Chronic Medication</h1>

<div class="row">
    <div class="col-md-6 offset-md-3 form-border">
        <form asp-action="EditAdminChronicMedication">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ChronicConditionId" />

            <div class="form-group">
                <label asp-for="Icd10Code" class="control-label">ICD-10 Code</label>
                <input asp-for="Icd10Code" class="form-control" />
                <span asp-validation-for="Icd10Code" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Diagnosis" class="control-label">Diagnosis</label>
                <input asp-for="Diagnosis" class="form-control" />
                <span asp-validation-for="Diagnosis" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <br />
            <div>
                <a class="btn-link" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


