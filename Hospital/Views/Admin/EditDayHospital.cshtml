@model Hospital.Models.DayHospital

@{
    ViewData["Title"] = "Edit Day Hospital";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    h1 {
        text-align: center;
        color: #08075F;
        font-weight: bold;
        text-decoration: underline;
    }

    h4 {
        color: #08075F;
        font-weight: bold;
    }

    .btn-link {
        background-color: #08075F;
        color: white;
        border: none;
        padding: 5px 10px;
        text-decoration: none;
        cursor: pointer;
        font-size: 13px;
        float: left;
    }

        .btn-link:hover {
            background-color: #FFDE59;
            border: none;
        }

    .form-border {
        border: 2px solid #ccc;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f9;
    }

    .form-control {
        border-radius: 5px;
    }

    .btn-primary {
        background-color: #08075F;
        border: none;
        color: white;
        float: right;
    }

        .btn-primary:hover {
            background-color: #FFDE59;
        }

    .small-input {
        width: 250px; /* Adjust the width to your liking */
    }

    .shift-right {
        margin-left: 80px; /* Adjust the margin to your liking */
    }

    .text-danger {
        color: red;
    }
</style>

<h1>Edit Day Hospital</h1>


<div class="row">
    <div class="col-md-6 offset-md-3 form-border">
        <form asp-action="EditDayHospital">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="HospitalId" />

            <div class="form-group">
                <label asp-for="HospitalName" class="control-label">Hospital Name</label>
                <input asp-for="HospitalName" class="form-control" />
                <span asp-validation-for="HospitalName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Address" class="control-label">Address</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="City" class="control-label">City</label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Province" class="control-label">Province</label>
                <input asp-for="Province" class="form-control" />
                <span asp-validation-for="Province" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PostalCode" class="control-label">Postal Code</label>
                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ContactNumber" class="control-label">Contact Number</label>
                <input asp-for="ContactNumber" class="form-control" />
                <span asp-validation-for="ContactNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EmailAddress" class="control-label">Email Address</label>
                <input asp-for="EmailAddress" class="form-control" />
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PracticeManager" class="control-label">Practice Manager</label>
                <input asp-for="PracticeManager" class="form-control" />
                <span asp-validation-for="PracticeManager" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PurchaseManagerEmail" class="control-label">Purchase Manager Email</label>
                <input asp-for="PurchaseManagerEmail" class="form-control" />
                <span asp-validation-for="PurchaseManagerEmail" class="text-danger"></span>
            </div>
            <br />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            <br />
            <div>
                <a class="btn-link" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>



