@model Hospital.Models.Town

@{
    ViewData["Title"] = "EditViewTown";
}

<h1>EditViewTown</h1>

<h4>Town</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditViewTown">
