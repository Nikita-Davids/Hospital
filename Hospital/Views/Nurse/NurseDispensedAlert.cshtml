@model IEnumerable<Hospital.Models.SurgeonPrescription>

@{
    ViewData["Title"] = "NurseDispensedAlert";
    Layout = "~/Views/Shared/_LayoutNurse.cshtml";

}

<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>

<body>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" id="successPopup">
            <strong>@TempData["SuccessMessage"]</strong>
        </div>

        <script>
            // Automatically hide the success message after 3 seconds
            setTimeout(function () {
                document.getElementById('successPopup').style.display = 'none';
            }, 10000);
        </script>
    }

    <h1>Nurse Dispensed Alerts</h1>
    <br>

    @foreach (var prescription in Model)
    {
        <div class="prescription-item">
            <div class="prescription-details">
                <p><b>Patient ID:</b> @prescription.PatientIdnumber</p>
                <p><b>Patient Name:</b> @prescription.PatientName @prescription.PatientSurname</p>
            </div>
            <div>
                <a href="@Url.Action("NurseDispensedDetails", "Nurse", new { patientId = prescription.PatientIdnumber })" class="view-button">View Script</a>
            </div>
        </div>
    }
</body>
<style>
    .prescription-item {
        border: 2px solid #ccc; /* Removed red border for urgent items */
        padding: 15px;
        margin-bottom: 15px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-radius: 8px;
    }

    .prescription-details {
        display: inline-block;
    }

    .view-button {
        background-color: #08075F;
        color: white;
        border: none;
        padding: 10px 20px;
        text-decoration: none;
        cursor: pointer;
        font-size: 14px;
    }

        .view-button:hover {
            background-color: #FFDE59;
        }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #c3e6cb;
        border-radius: 4px;
    }
</style>

