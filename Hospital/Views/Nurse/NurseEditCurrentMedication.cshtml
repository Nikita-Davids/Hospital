@model Hospital.Models.PatientCurrentMedication

@{
    ViewData["Title"] = "Edit Current Medication";
    Layout = "~/Views/Shared/_LayoutNurse.cshtml";

}

<h1>@ViewData["Title"]</h1>

<div class="form-container">
        <form asp-action="NurseEditCurrentMedication">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MedicationId" />
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
            <input asp-for="PatientId" class="form-control" readonly />
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurrentMedication" class="control-label"></label>
                <input asp-for="CurrentMedication" class="form-control" />
                <span asp-validation-for="CurrentMedication" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
</div>

<div class="button-container">
    <a class="btn-link" asp-action="NurseViewPatientCurrentMedication">View Current Medication</a>
</div>