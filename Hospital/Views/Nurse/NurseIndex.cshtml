﻿@{
    ViewData["Title"] = "NurseIndex";
    Layout = "~/Views/Shared/_LayoutNurse.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .vital-item {
            border: 4px solid #ccc;
            padding: 15px;
            margin-bottom: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .urgent {
            border-color: red;
        }

        .vital-details {
            display: inline-block;
        }

        .view-button {
            background-color: #08075F;
            color: white;
            border: none;
            padding: 20px 40px;
            text-decoration: none;
            cursor: pointer;
            font-size: 17px;
        }

            .view-button:hover {
                background-color: #FFDE59;
            }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #c3e6cb;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" id="successPopup">
            <strong>@TempData["SuccessMessage"]</strong>
        </div>

        <script>
            // Automatically hide the success message after 3 seconds
            setTimeout(function () {
                document.getElementById('successPopup').style.display = 'none';
            }, 3000);
        </script>
    }

    <h1><u><b>Patient Vitals</b></u></h1>
    <br>

    @foreach (var vital in Model)
    {
        <div class="vital-item @(vital.Tempreture > 37 ? "urgent" : "")">
            <div class="vital-details">
                <p><b>Patient ID:</b> @vital.PatientId</p>
                <p><b>Weight:</b> @vital.Weight kg</p>
                <p><b>Height:</b> @vital.Height cm</p>
                <p><b>Temperature:</b> @vital.Tempreture °C</p>
                <p><b>Blood Pressure:</b> @vital.BloodPressure mmHg</p>
                <p><b>Pulse:</b> @vital.Pulse bpm</p>
                <p><b>Respiratory Rate:</b> @vital.Respiratory breaths/min</p>
                <p><b>Blood Oxygen Level:</b> @vital.BloodOxygen %</p>
                <p><b>Blood Glucose Level:</b> @vital.BloodGlucoseLevel mg/dL</p>
                <p><b>Vital Time:</b> @vital.VitalTime?.ToString(@"hh\:mm")</p>
            </div>
            <div>
                <a href="@Url.Action("NurseViewPatientVital", "Nurse", new { vitalId = vital.PatientVitalId })" class="view-button">View Vital</a>
            </div>
        </div>
    }
</body>
</html>