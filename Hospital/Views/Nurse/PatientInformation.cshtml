<!DOCTYPE html>
<html>
@{
    Layout = "~/Views/Shared/_LayoutNurse.cshtml";
}

<style>
    body {
        font-family: Arial, Helvetica, sans-serif;
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    h1 {
        text-align: center;
        color: #08075F;
        font-weight: bold;
        text-decoration: underline;
        margin: 20px 0;
    }

    .btn {
        background-color: #08075F;
        color: white;
        border: none;
        padding: 10px 20px;
        text-decoration: none;
        cursor: pointer;
        font-size: 18px;
        flex: 1;
        text-align: center;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .btn:hover {
            background-color: #FFDE59;
            color: #08075F;
        }

    .button-container {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 20px;
        margin: 20px;
    }

    @@media screen and (max-width: 600px) {
        .btn {
            font-size: 16px;
            padding: 10px 15px;
        }

        .button-container {
            flex-direction: column;
            align-items: center;
            gap: 15px;
        }
    }
</style>

<body>
    <h1>View Information</h1>
    <div class="button-container">
        <a class="btn" asp-controller="Nurse" asp-action="NurseViewPatientMedicalCondition">View Medical Conditions</a>
        <a class="btn" asp-controller="Nurse" asp-action="NurseViewPatientCurrentMedication">View Current Medications</a>
        <a class="btn" asp-controller="Nurse" asp-action="NurseViewPatientAllergy">View Patient Allergies</a>
        <a class="btn" asp-controller="Nurse" asp-action="NurseViewPatientVital">View Patient Vitals</a>
        <a class="btn" asp-controller="Nurse" asp-action="NurseViewAdministerMedication">View Administered Medication</a>
    </div>
</body>
</html>
