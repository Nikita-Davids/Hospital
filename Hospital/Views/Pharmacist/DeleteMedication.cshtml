@model Hospital.Models.Medication

@{
    Layout = "~/Views/Shared/_LayoutPharmacist.cshtml";
}

<style>
    h1 {
        text-align: center;
        color: #08075F;
        font-weight: bold;
        text-decoration: underline;
    }

    .btn-link {
        background-color: #08075F;
        color: white;
        border: none;
        padding: 5px 10px;
        text-decoration: none;
        cursor: pointer;
        font-size: 13px;
        float: left;
    }

        .btn-link:hover {
            background-color: #FFDE59;
        }

    .box {
        border: 1px solid #ccc;
        padding: 20px;
        margin: 40px auto;
        width: 60%;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f9;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-control {
        width: 100%;
    }

    button {
        padding: 9px 50px;
        font-size: 16px;
        background-color: #08075F;
        color: white;
        border: none;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s ease;
        float: right;
    }

        button:hover {
            background-color: #FFDE59;
            color: #08075F;
        }

    table {
        width: 100%;
        margin-top: 20px;
        border-collapse: collapse;
    }

    th, td {
        padding: 10px;
        text-align: left;
        border: 1px solid #ccc; /* Add borders to both columns and rows */
        width: 50%; /* Make columns equal width */
    }

    th {
        background-color: #f2f2f2;
    }

    dl.row {
        margin-bottom: 20px;
    }

        dl.row dt {
            width: 25% !important; /* Force the width */
            float: left !important; /* Align to the left */
            clear: both !important; /* Start on a new line */
            font-weight: bold;
            margin-bottom: 15px !important; /* Increase bottom margin for more space */
        }

        dl.row dd {
            width: 70% !important; /* Align with dt width */
            float: left !important;
            margin-bottom: 15px !important; /* Increase bottom margin for more space */
        }
</style>

<h1>Delete Medication</h1>

<div class="box">
    <h3>Are you sure you want to delete this?</h3>
    <hr />
    <table>
        <tr>
            <th>@Html.DisplayNameFor(model => model.MedicationName)</th>
            <td>@Html.DisplayFor(model => model.MedicationName)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.DosageForm)</th>
            <td>@Html.DisplayFor(model => model.DosageForm)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Schedule)</th>
            <td>@Html.DisplayFor(model => model.Schedule)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ReOrderLevel)</th>
            <td>@Html.DisplayFor(model => model.ReOrderLevel)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.MedicationActiveIngredients)</th>
            <td>@Html.DisplayFor(model => model.MedicationActiveIngredients)</td>
        </tr>
        <tr>
            <th>@Html.DisplayNameFor(model => model.IsDeleted)</th>
            <td>@Html.DisplayFor(model => model.IsDeleted)</td>
        </tr>
    </table>

    <form asp-action="DeleteMedication">
        <input type="hidden" asp-for="MedicationId" />
        <br />
        <button type="submit" class="btn btn-danger">Delete</button>
        <br />
        <br />
    </form>

    <div class="form-group text-center">
        <a class="btn-link" asp-controller="Pharmacist" asp-action="ViewAddMedication">Back to View</a>
    </div>
</div>