@model Hospital.ModelViews.RejectedPrescriptionViewModel

@{
    Layout = "~/Views/Shared/_LayoutPharmacist.cshtml";
}

<style>
    h1 {
        text-align: center;
        color: #08075F;
        font-weight: bold;
        text-decoration: underline;
        margin-bottom: 30px;
    }

    .details-container {
        border: 2px solid #08075F;
        border-radius: 10px;
        padding: 25px;
        max-width: 700px;
        margin: 30px auto;
        background-color: #f9f9f9;
        box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
    }

        .details-container div {
            margin-bottom: 20px;
            font-size: 18px;
            color: #333;
        }

        .details-container b {
            color: #08075F;
            font-size: 18px;
        }

    .medication-rejected {
        background-color: #FFCDD2;
        border: 2px solid #D32F2F;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 25px;
    }

        .medication-rejected h2 {
            color: #D32F2F;
            text-align: center;
            margin-bottom: 15px;
        }

    .btn-primary {
        background-color: #08075F;
        color: white;
        border: none;
        padding: 10px 20px;
        text-decoration: none;
        cursor: pointer;
        font-size: 18px;
        border-radius: 5px;
        display: block;
        width: fit-content;
        margin: 30px auto 0;
    }

        .btn-primary:hover {
            background-color: #FFDE59;
            color: #08075F;
        }
</style>

<h1>Rejected Prescription Details</h1>

<div class="details-container">
  
    <div>
        <b>Patient ID Number:</b> @Model.PatientIDNumber
    </div>
    <div>
        <b>Patient Name:</b> @Model.PatientName @Model.PatientSurname
    </div>
    <div>
        <b>Urgency:</b> @Model.Urgent
    </div>
    <div>
        <b>Surgeon ID:</b> @Model.SurgeonID
    </div>
    <div>
        <b>Prescription Date:</b> @Model.PrescriptionDate?.ToString("dd-MM-yyyy")
    </div>

    <div class="medication-rejected">
        <h2>Medication Rejected</h2>
        <div>
            <b>Medication Name:</b> @Model.MedicationName
        </div>
        <div>
            <b>Dosage Form:</b> @Model.PrescriptionDosageForm
        </div>
        <div>
            <b>Quantity:</b> @Model.Quantity
        </div>
        <div>
            <b>Instructions:</b> @Model.Instructions
        </div>
    </div>

    <hr />

    <div>
        <b>Rejection Reason:</b> @Model.RejectionReason
    </div>
    <div>
        <b>Rejection Date:</b> @Model.RejectionDate.ToString("dd-MM-yyyy HH:mm")
    </div>
    <div>
        <b>Pharmacist:</b> @Model.PharmacistName @Model.PharmacistSurname
    </div>
    <div>
        <b>Status:</b> @Model.Status
    </div>
</div>

<a href="@Url.Action("ViewRejectScript", "Pharmacist")" class="btn-primary">Back to Rejected Prescriptions List</a>
