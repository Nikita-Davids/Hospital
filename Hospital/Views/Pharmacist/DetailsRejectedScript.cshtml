@model Hospital.ModelViews.RejectedPrescriptionViewModel

@{
    Layout = "~/Views/Shared/_LayoutPharmacist.cshtml";
}

<style>
    /* Applying different fonts to headings */
    h1 {
        text-align: center;
        color: #08075F;
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 40px;
        font-family: 'Arial', sans-serif; /* Change to your desired font */
    }

    h4 {
        text-align: center;
        color: #08075F;
        font-weight: bold;
        text-decoration: underline;
        margin-bottom: 20px;
       
    }

    .form-container {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        max-width: 800px;
        margin: 0 auto;
        background-color: #f9f9f9;
    }

    .form-group {
        margin-bottom: 15px;
        padding: 10px;
        border-bottom: 1px solid #ddd;
    }

        .form-group:last-child {
            border-bottom: none;
        }

        .form-group dt {
            font-weight: bold; /* Keep dt bold */
        }

        .form-group dd {
            margin-left: 0;
            font-weight: normal; /* Change dd to less bold */
            color: #333; /* Optional: Change color to make it distinct */
        }

    .btn-action {
        background-color: #08075F;
        color: white;
        border: none;
        padding: 5px 10px;
        text-decoration: none;
        cursor: pointer;
        font-size: 13px;
    }

        .btn-action:hover {
            background-color: #FFDE59;
            color: #08075F;
        }
</style>

<h1>Rejected Prescription Details</h1>

<div class="form-container">
    <h4>Details:</h4>
    <dl class="form-group">
        <dt>Patient ID Number:</dt>
        <dd>@Model.PatientIDNumber</dd>
    </dl>
    <dl class="form-group">
        <dt>Patient Name:</dt>
        <dd>@Model.PatientName @Model.PatientSurname</dd>
    </dl>
    <dl class="form-group">
        <dt>Medication Name:</dt>
        <dd>@Model.MedicationName</dd>
    </dl>
    <dl class="form-group">
        <dt>Dosage Form:</dt>
        <dd>@Model.PrescriptionDosageForm</dd>
    </dl>
    <dl class="form-group">
        <dt>Quantity:</dt>
        <dd>@Model.Quantity</dd>
    </dl>
    <dl class="form-group">
        <dt>Instructions:</dt>
        <dd>@Model.Instructions</dd>
    </dl>
    <dl class="form-group">
        <dt>Urgency:</dt>
        <dd>@Model.Urgent</dd>
    </dl>
    <dl class="form-group">
        <dt>Surgeon ID:</dt>
        <dd>@Model.SurgeonID</dd>
    </dl>
    <dl class="form-group">
        <dt>Prescription Date:</dt>
        <dd>@Model.PrescriptionDate?.ToString("dd-MM-yyyy")</dd>
    </dl>
    <dl class="form-group">
        <dt>Dispense Date:</dt>
        <dd>@Model.DispenseDateTime?.ToString("dd-MM-yyyy HH:mm")</dd>
    </dl>
    <hr />
    <dl class="form-group">
        <dt>Rejection Reason:</dt>
        <dd>@Model.RejectionReason</dd>
    </dl>
    <dl class="form-group">
        <dt>Rejection Date:</dt>
        <dd>@Model.RejectionDate.ToString("dd-MM-yyyy HH:mm")</dd>
    </dl>
    <dl class="form-group">
        <dt>Pharmacist:</dt>
        <dd>@Model.PharmacistName @Model.PharmacistSurname</dd>
    </dl>
    <dl class="form-group">
        <dt>Status:</dt>
        <dd>@Model.Status</dd>
    </dl>
    <div class="form-group">
        <a asp-action="ViewRejectScript" class="btn-action">Return</a>
    </div>
</div>

<br />
<br />
