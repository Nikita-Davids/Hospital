@using Hospital.ModelViews
@model IEnumerable<PrescriptionDisplayViewModel>

@{
    Layout = "~/Views/Shared/_LayoutPharmacist.cshtml";
}
<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .prescription-item {
            border: 4px solid #ccc;
            padding: 15px;
            margin-bottom: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        h1 {
            text-align: center;
            color: #08075F;
            text-decoration: underline;
        }

        .urgent {
            border-color: red;
        }

        .prescription-details {
            display: inline-block;
        }

        .view-button {
            background-color: #08075F;
            color: white;
            border: none;
            padding: 20px 40px;
            text-decoration: none;
            cursor: pointer;
            font-size: 17px;
        }

            .view-button:hover {
                background-color: #FFDE59;
            }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #c3e6cb;
            border-radius: 4px;
        }
    </style>
</head>

<body>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" id="successPopup">
            <strong>@TempData["SuccessMessage"]</strong>
        </div>

        <script>
            // Automatically hide the success message after 3 seconds
            setTimeout(function () {
                document.getElementById('successPopup').style.display = 'none';
            }, 3000);
        </script>
    }

    <h1><u><b>Alerts</b></u></h1>
    <br>

    @foreach (var prescription in Model)
    {
        <div class="prescription-item @(prescription.Urgent == "Urgent" ? "urgent" : "")">
            <div class="prescription-details">
                <p><b>Patient ID:</b> @prescription.PatientIDNumber</p>
                <p><b>Patient Name:</b> @prescription.PatientName @prescription.PatientSurname</p>
                <p><b>Date:</b> @prescription.PrescriptionDate?.ToString("MM/dd/yyyy")</p>
                <p><b>Surgeon:</b> @prescription.SurgeonName @prescription.SurgeonSurname</p>
            </div>
            <div>
                <!-- Use PrescriptionId instead of PatientIDNumber in the action link -->
                <a href="@Url.Action("PrescribedScript", "Pharmacist", new { prescriptionId = prescription.PrescriptionId })" class="view-button">View Script</a>
            </div>
        </div>
    }
</body>
