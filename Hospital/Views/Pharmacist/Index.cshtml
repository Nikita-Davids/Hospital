@using Hospital.ModelViews
@model IEnumerable<PrescriptionDisplayViewModel>
@{
    Layout = "~/Views/Shared/_LayoutPharmacist.cshtml";
}

<head>
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .prescription-item {
            border: 4px solid #ccc;
            padding: 15px;
            margin-bottom: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap; /* Ensure elements wrap on smaller screens */
        }

        h1 {
            text-align: center;
            color: #08075F;
            text-decoration: underline;
            font-size: 2em; /* Responsive font size */
        }

        .urgent {
            border-color: red;
        }

        .prescription-details {
            flex: 1;
            margin-right: 20px;
            font-size: 1em; /* Default font size */
        }

        .view-button {
            background-color: #08075F;
            color: white;
            border: none;
            padding: 15px 20px;
            text-decoration: none;
            cursor: pointer;
            font-size: 1em;
            transition: background-color 0.3s ease;
        }

        .view-button:hover {
            background-color: #FFDE59;
            color: black;
        }

        .alert-success {
            background-color: #d4edda;
            color: #155724;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #c3e6cb;
            border-radius: 4px;
        }

        /* Responsive design */
         .screen and (max-width: 768px) {
            h1 {
                font-size: 1.5em; /* Smaller font size on tablet screens */
            }

            .prescription-item {
                flex-direction: column; /* Stack items vertically on smaller screens */
                align-items: flex-start; /* Align items to the start */
            }

            .prescription-details {
                margin-right: 0;
                margin-bottom: 15px;
                font-size: 0.9em; /* Slightly smaller font on smaller screens */
            }

            .view-button {
                width: 100%; /* Make button take full width on small screens */
                padding: 15px;
                font-size: 1em;
            }
        }

        .screen and (max-width: 480px) {
            h1 {
                font-size: 1.2em; /* Smaller font size on mobile screens */
            }

            .prescription-item {
                padding: 10px;
            }

            .view-button {
                padding: 10px;
                font-size: 0.9em;
            }
        }
    </style>
</head>

<body>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" id="successPopup">
            <strong>@TempData["SuccessMessage"]</strong>
        </div>

        <script>
            // Automatically hide the success message after 3 seconds
            setTimeout(function () {
                document.getElementById('successPopup').style.display = 'none';
            }, 3000);
        </script>
    }

    <h1><u><b>Alerts</b></u></h1>
    <br>

    @foreach (var prescription in Model)
    {
        <div class="prescription-item @(prescription.Urgent == "Urgent" ? "urgent" : "")">
            <div class="prescription-details">
                <p><b>Patient ID:</b> @prescription.PatientIDNumber</p>
                <p><b>Patient Name:</b> @prescription.PatientName @prescription.PatientSurname</p>
                <p><b>Date:</b> @prescription.PrescriptionDate?.ToString("MM/dd/yyyy")</p>
                <p><b>Surgeon:</b> @prescription.SurgeonName @prescription.SurgeonSurname</p>
            </div>

            <div>
                <a href="@Url.Action("PrescribedScript", "Pharmacist", new { PrescribedID = prescription.PrescribedID })" class="view-button">View Script</a>
            </div>
        </div>
    }
</body>
