@model Hospital.Models.Restock

@{
    ViewData["Title"] = "Restock";
}

<h1>Restock</h1>

<h4>Restock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Restock" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="MedicationName" class="control-label"></label>
                <select asp-for="MedicationId" class="form-control" asp-items="ViewBag.Medications" onchange="loadDosageForms()"></select>
                <span asp-validation-for="MedicationId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DosageForm" class="control-label"></label>
                <select asp-for="DosageForm" class="form-control" asp-items="ViewBag.DosageForms"></select>
                <span asp-validation-for="DosageForm" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="QuantityReceived" class="control-label"></label>
                <input asp-for="QuantityReceived" class="form-control" />
                <span asp-validation-for="QuantityReceived" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RestockDate" class="control-label"></label>
                <input asp-for="RestockDate" class="form-control" />
                <span asp-validation-for="RestockDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function loadDosageForms() {
            var medicationId = $('select[name="MedicationId"]').val();
            $.getJSON('@Url.Action("GetDosageForms")', { medicationId: medicationId }, function (data) {
                var $dosageFormSelect = $('select[name="DosageForm"]');
                $dosageFormSelect.empty();
                $.each(data, function (index, item) {
                    $dosageFormSelect.append($('<option>').text(item).attr('value', item));
                });
            });
        }
    </script>
}
