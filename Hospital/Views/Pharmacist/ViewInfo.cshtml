<!DOCTYPE html>
<html>
@{
    Layout = "~/Views/Shared/_LayoutPharmacist.cshtml";
}

<style>
    h1 {
        text-align: center;
        color: #08075F;
        text-decoration: underline;
    }

    .btn {
        background-color: #08075F;
        color: white;
        border: none;
        padding: 10px 20px;
        text-decoration: none;
        cursor: pointer;
        font-size: 16px;
        display: inline-block;
        width: 200px; /* Adjust width to fit all buttons in one line */
        text-align: center;
    }

        .btn:hover {
            background-color: #FFDE59;
            color: #08075F;
        }

    .btn-container {
        text-align: center;
        display: flex;
        justify-content: space-between; /* Ensures equal spacing between buttons */
        flex-wrap: nowrap; /* Prevents buttons from wrapping to the next line */
        gap: 10px; /* Adds space between buttons */
    }
</style>

<body>
    <h1><u><b>View Information</b></u></h1>
    <br>
    <!-- Buttons in a centered container -->
    <div class="btn-container">
        <a asp-action="ViewRestock" class="btn">View Restock of Medication</a>
        <a asp-action="ViewAddMedication" class="btn">View Added Medication</a>
        <a asp-action="ViewOrderedStock" class="btn">View Ordered Stock</a>
        <a asp-action="ViewMedicationDispensed" class="btn">Prescription Dispensed</a>
        <a asp-action="ViewRejectScript" class="btn">Script Rejected</a>
    </div>
    <br />
    <br />
</body>
</html>
