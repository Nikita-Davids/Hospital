<!DOCTYPE html>
<html>
@{
    Layout = "~/Views/Shared/_LayoutPharmacist.cshtml";
}

<style>
    h1 {
        text-align: center;
        color: #08075F;
        text-decoration: underline;
    }

    .btn {
        background-color: #08075F;
        color: white;
        border: none;
        padding: 10px 20px;
        text-decoration: none;
        cursor: pointer;
        font-size: 20px;
        flex: 1; /* Make buttons take equal space */
        text-align: center; /* Center text within the button */
    }

        /* Add hover effect */
        .btn:hover {
            background-color: #FFDE59;
        }

    /* Flex container for buttons */
    .button-container {
        display: flex;
        justify-content: space-between; /* Distribute buttons with space between */
        flex-wrap: nowrap; /* Prevent wrapping to the next line */
        gap: 20px; /* Adjust spacing between buttons */
    }
</style>

<body>
    <h1><u><b>View Information</b></u></h1>
    <br>
    <!-- Buttons in a centered container -->
    <div class="button-container">
        <a asp-action="ViewRestock" class="btn">View Restock of Medication</a>
        <a asp-action="ViewAddMedication" class="btn">View Added Medication</a>
        <a asp-action="ViewOrderedStock" class="btn">View Ordered Stock</a>
        <a asp-action="ViewMedicationDispensed" class="btn">View Scripts Dispensed</a>
        <a asp-action="ViewRejectScript" class="btn">View Rejected Scripts</a>
    </div>
    <br />
    <br />
</body>
</html>