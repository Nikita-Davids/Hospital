@model IEnumerable<dynamic>

@{
    Layout = "~/Views/Shared/_LayoutPharmacist.cshtml";
}

<style>
    h1 {
        text-align: center;
        color: #08075F;
        font-weight: bold;
        text-decoration: underline;
    }

    .btn-link {
        background-color: #08075F;
        color: white;
        border: none;
        padding: 5px 10px;
        text-decoration: none;
        cursor: pointer;
        font-size: 13px;
    }

        .btn-link:hover {
            background-color: #FFDE59;
        }

    .btn-primary {
        background-color: red;
        color: white;
        border: none;
        padding: 5px 10px;
        text-decoration: none;
        cursor: pointer;
        font-size: 13px;
        margin-top: 20px;
    }

        .btn-primary:hover {
            background-color: darkred;
        }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table th, .table td {
            border: 1px solid #ddd;
            padding: 8px;
        }

        .table th {
            background-color: #f2f2f2;
            text-align: left;
        }

        .table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

    .search-container {
        display: flex;
        justify-content: center;
        align-items: center; /* Center vertically */
        margin-bottom: 20px;
    }

    .form-control {
        width: 300px; /* Adjust width as needed */
        margin-right: 10px;
    }

    .btn-search, .btn-refresh {
        background-color: #08075F;
        color: white;
        padding: 5px 10px;
        border: none;
        cursor: pointer;
        font-size: 13px;
        margin-left: 5px;
    }

        .btn-search:hover, .btn-refresh:hover {
            background-color: #FFDE59;
            color: #08075F;
        }
</style>

<!-- Container for the header and search bar -->
<div style="text-align: center; margin-bottom: 20px;">
    <h1>Rejected Prescriptions</h1>
    <!-- Search bar with refresh button -->
    <div class="search-container">
        <input type="text" id="searchInput" class="form-control" placeholder="Search by medication name..." />
        <button class="btn-search" onclick="filterRows()">Search</button>
        <button class="btn-refresh" onclick="refreshTable()">Refresh</button>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Patient ID</th>
            <th>Patient Name</th>
            <th>Patient Surname</th>
            <th>Medication Name</th>
            <th>Dosage Form</th>
            <th>Quantity</th>
            <th>Rejection Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.PatientIDNumber</td>
                <td>@item.PatientName</td>
                <td>@item.PatientSurname</td>
                <td>@item.MedicationName</td>
                <td>@item.PrescriptionDosageForm</td>
                <td>@item.Quantity</td>
                <td>@item.RejectionDate.ToString("dd-MM-yyyy")</td>
                <td>@item.Status</td>
                <td>
                    <a href="@Url.Action("DetailsRejectedScript", "Pharmacist", new { prescriptionId = item.PrescriptionId })" class="btn-link">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<br />
<br />

<script>
    function filterRows() {
        const searchInput = document.getElementById('searchInput');
        const tableRows = document.querySelectorAll('.table tbody tr');
        const searchTerm = searchInput.value.toLowerCase();

        tableRows.forEach(row => {
            const medicationName = row.querySelector('td:nth-child(4)').textContent.toLowerCase(); // Column index for Medication Name
            if (medicationName.includes(searchTerm)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    }

    function refreshTable() {
        document.getElementById('searchInput').value = ''; // Clear the search input
        filterRows(); // Show all rows
    }

    document.addEventListener('DOMContentLoaded', function () {
        document.querySelector('.btn-search').addEventListener('click', filterRows);
        document.querySelector('.btn-refresh').addEventListener('click', refreshTable);
    });
</script>
