@model Hospital.ViewModels.PatientOverviewViewModel
@{
    Layout = "~/Views/Shared/_LayoutPharmacist.cshtml";
}
<style>
    h1 {
        text-align: center;
        color: #08075F;
        text-decoration: underline;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

    .table th, .table td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    .table th {
        background-color: #f2f2f2;
    }

    .table tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    /* Ensure all columns have the same width */
    .col-name {
        width: 20%;
    }

    .col-action {
        width: 20%;
        text-align: center;
    }

    .btn-link {
        background-color: #08075F;
        color: white;
        border: none;
        padding: 5px 10px;
        text-decoration: none;
        cursor: pointer;
        font-size: 13px;
    }

    .btn-link:hover {
        background-color: #FFDE59;
        color: #08075F;
    }

    .form-container {
        border: 1px solid #ccc;
        padding: 20px;
        border-radius: 8px;
        background-color: #f9f9f9;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 20px auto;
    }

    .button-container {
        text-align: right;
        margin-top: 20px;
    }

    .btn-primary {
        padding: 10px 60px;
        font-size: 16px;
        background-color: #08075F;
        color: white;
        border: none;
        cursor: pointer;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #FFDE59;
        color: #08075F;
    }

    .form-group {
        margin-bottom: 20px;
    }

    input.form-control {
        width: 100%;
    }

    .button-container {
        text-align: right; /* Aligns button container to the right */
    }

    .btn-back {
        background-color: red; /* Red color for the back button */
        color: white;
        border: none;
        padding: 5px 10px;
        text-decoration: none;
        cursor: pointer;
        font-size: 13px;
    }

        .btn-back:hover {
            background-color: darkred; /* Darker red on hover */
        }
</style>

<h1>Patient Details</h1>

<div style="text-align: left; margin-bottom: 20px;">
    <a href="@Url.Action("ViewInfo", "Pharmacist")" class="btn btn-back">Back</a>
</div>

<!-- Patient Details Section -->
<div>
    <h2>Patient Details</h2>
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <td>@Model.PatientIDNumber</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>@Model.PatientName @Model.PatientSurname</td>
        </tr>
        <tr>
            <th>Address</th>
            <td>@Model.PatientAddress</td>
        </tr>
        <tr>
            <th>Contact</th>
            <td>@Model.PatientContactNumber</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.PatientEmailAddress</td>
        </tr>
        <tr>
            <th>Date of Birth</th>
            <td>@Model.PatientDateOfBirth.ToShortDateString()</td>
        </tr>
        <tr>
            <th>Gender</th>
            <td>@Model.PatientGender</td>
        </tr>
    </table>
</div>

<!-- Vital Signs Section -->
<div>
    <h2>Vital Signs</h2>
    <table class="table table-bordered">
        <tr>
            <th>Weight</th>
            <td>@(Model.Weight?.ToString() ?? "N/A") kg</td>
        </tr>
        <tr>
            <th>Height</th>
            <td>@(Model.Height?.ToString() ?? "N/A") cm</td>
        </tr>
        <tr>
            <th>Temperature</th>
            <td>@(Model.Temperature?.ToString() ?? "N/A") °C</td>
        </tr>
        <tr>
            <th>Blood Pressure</th>
            <td>@(Model.BloodPressure?.ToString() ?? "N/A") mmHg</td>
        </tr>
        <tr>
            <th>Pulse</th>
            <td>@(Model.Pulse?.ToString() ?? "N/A") bpm</td>
        </tr>
        <tr>
            <th>Respiratory Rate</th>
            <td>@(Model.Respiratory?.ToString() ?? "N/A") breaths/min</td>
        </tr>
        <tr>
            <th>Blood Oxygen</th>
            <td>@(Model.BloodOxygen?.ToString() ?? "N/A") %</td>
        </tr>
        <tr>
            <th>Blood Glucose Level</th>
            <td>@(Model.BloodGlucoseLevel?.ToString() ?? "N/A") mg/dL</td>
        </tr>
        <tr>
            <th>Vital Time</th>
            <td>@(Model.VitalTime?.ToString(@"hh\:mm") ?? "N/A")</td>
        </tr>
    </table>
</div>

<!-- Allergies Section -->
<div>
    <h2>Allergies</h2>
    @if (Model.Allergies?.Any() == true)
    {
        <table class="table table-bordered">
            @foreach (var allergy in Model.Allergies)
            {
                <tr>
                    <td>@allergy.Allergy</td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>None reported</p>
    }
</div>

<!-- Current Medications Section -->
<div>
    <h2>Current Medications</h2>
    @if (Model.CurrentMedications?.Any() == true)
    {
        <table class="table table-bordered">
            @foreach (var medication in Model.CurrentMedications)
            {
                <tr>
                    <td>@medication.CurrentMedication</td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>None reported</p>
    }
</div>

<!-- Medical Conditions Section -->
<div>
    <h2>Medical Conditions</h2>
    @if (Model.MedicalConditions?.Any() == true)
    {
        <table class="table table-bordered">
            @foreach (var condition in Model.MedicalConditions)
            {
                <tr>
                    <td>@condition.MedicalCondition</td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>None reported</p>
    }
</div>

<div class="button-container">
    <a class="btn-link" asp-action="Index">Return</a>
</div>
<br />
<br />
